<h1>Listing hits</h1>

<table>
  <thead>
    <tr>
      <th>Message</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hits.each do |hit| %>
      <tr>
        <td><%= hit.message %></td>
        <td><%= hit.user_id %></td>
        <div class="btn-group">
          <td type="button" class="btn btn-default"><%= link_to 'Show', hit %></td>
          <td type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil"></span><%= link_to '', edit_hit_path(hit) %></td>
          <td type="button" class="btn btn-default"><span class="glyphicon glyphicon-trash"></span><%= link_to '', hit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

